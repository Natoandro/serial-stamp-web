{
	"languages": {
		"Svelte": {
			"inlay_hints": {
				"enabled": true
			},
			"show_whitespaces": "boundary"
		}
	},
	"prettier": {
		"allowed": true
	},
	"project_name": "Serial Stamp",
	"context_servers": {
		"svelte-mcp": {
			"enabled": true,
			"url": "https://mcp.svelte.dev/mcp"
		},
		"git": {
			"enabled": true,
			"command": "uvx",
			"args": ["mcp-server-git", "--repository", "."]
		}
	}
}
